<div class="container">
  <div class="d-flex my-3">
    <h1>All our Movielists(<%= @lists.length %>)</h1>
  </div>
  <div>
    <% @lists.each do |list| %>
      <div class="row">
        <div class="col-12 mt-4">
          <h2><%= link_to list.name, list_path(list), class: "text-decoration-none text-color-black" %></h2>
        </div>
        <% list.movies.first(2).each do |movie| %>
          <%= render "movie_card", movie: movie %>
        <% end %>
      </div>
    <% end %>
    <div class="col-12 mt-4">
      <%= link_to "Add a list", new_list_path, class: "btn btn-primary w-100 mb-5" %>
    </div>
  </div>
</div>
